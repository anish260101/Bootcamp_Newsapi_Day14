<body>
    <h1>Top News Headlines</h1>
    <div class="row">
        {{#each articles}}
        <div class="article">
            {{#if this.thumbnail}}
            <img class="thumbnail" src="{{this.thumbnail}}" alt="{{this.title}}">
            {{else if this.UrlToImage}}
            <img class="article-image" src="{{this.UrlToImage}}" alt="{{this.title}}">
            {{else}}
            <img class="placeholder-image" src="C:\Users\anisraj\Desktop\Bootcamp\Day 14\public\images\placeholder-news.jpg" alt="No Image Available">
            {{/if}}
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <button onclick="redirectToArticle('{{this.url}}')">Read More</button>
            <p>Published At: {{this.publishedAt}}</p>
            <p>Source: {{this.source.name}}</p>
            <hr>
        </div>
        {{/each}}
    </div>

    <script>
        function redirectToArticle(url) {
            window.open(url, '_blank');
        }
    </script>
</body>

</html>

